public class Person{
    private String _firstName, _lastName, _emailAddress;

    public Person(String first, String last){
	//super();
	_firstName = first;
	_lastName = last;
	if(last.length() > 5)
	    last = last.substring(0,5);
	_emailAddress = _firstName.substring(0,1) + last + "@stuy.edu";
    }
}
